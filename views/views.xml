<odoo>
  <data>

    <!--====================================-->
    <!-- VISTAS CUIDADOR -->
    <!--====================================-->

    <!-- Lista -->
    <record id="view_cuidador_list" model="ir.ui.view">
      <field name="name">refugio_animales.cuidador.list</field>
      <field name="model">refugio_animales.cuidador</field>
      <field name="arch" type="xml">
        <list string="Cuidadores">
          <field name="nombre_cuidador"/>
        </list>
      </field>
    </record>

    <!-- Formulario -->
    <record id="view_cuidador_form" model="ir.ui.view">
      <field name="name">refugio_animales.cuidador.form</field>
      <field name="model">refugio_animales.cuidador</field>
      <field name="arch" type="xml">
        <form string="Cuidador">
          <sheet>
            <group>
              <field name="nombre_cuidador"/>
              <field name="instalacion_id"/>
            </group>
            <notebook>
              <page string="Animales cuidados">
                <field name="animal_ids"/>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <!--====================================-->
    <!-- VISTAS ANIMAL -->
    <!--====================================-->

    <!-- Lista -->
    <record id="view_animal_list" model="ir.ui.view">
      <field name="name">refugio_animales.animal.list</field>
      <field name="model">refugio_animales.animal</field>
      <field name="arch" type="xml">
        <list string="Animales">
          <field name="nombre_animal"/>
          <field name="especie"/>
          <field name="cuidador_id"/>
          <field name="instalacion_id"/>
        </list>
      </field>
    </record>

    <!-- Formulario -->
    <record id="view_animal_form" model="ir.ui.view">
      <field name="name">refugio_animales.animal.form</field>
      <field name="model">refugio_animales.animal</field>
      <field name="arch" type="xml">
        <form string="Animal">
          <header>
            <button name="%(action_report_animal)d"
                    string="Ficha Animal"
                    type="action"
                    class="oe_highlight"
                    icon="fa-print"/>
          </header>
          <sheet>
            <group>
              <field name="nombre_animal"/>
              <field name="especie"/>
              <field name="edad"/>
              <field name="estado"/>
              <field name="cuidador_id"/>
              <field name="instalacion_id"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!--====================================-->
    <!-- VISTAS INSTALACION -->
    <!--====================================-->

    <!-- Lista -->
    <record id="view_instalacion_list" model="ir.ui.view">
      <field name="name">refugio_animales.instalacion.list</field>
      <field name="model">refugio_animales.instalacion</field>
      <field name="arch" type="xml">
        <list string="Instalaciones">
          <field name="nombre_instalacion"/>
          <field name="capacidad"/>
          <field name="tipo"/>
        </list>
      </field>
    </record>

    <!-- Formulario -->
    <record id="view_instalacion_form" model="ir.ui.view">
      <field name="name">refugio_animales.instalacion.form</field>
      <field name="model">refugio_animales.instalacion</field>
      <field name="arch" type="xml">
        <form string="Instalación">
          <sheet>
            <group>
              <field name="nombre_instalacion"/>
              <field name="capacidad"/>
              <field name="tipo"/>
            </group>
            <notebook>
              <page string="Animales contenidos">
                <field name="animal_ids"/>
              </page>
              <page string="Cuidadores asignados">
                <field name="cuidador_ids"/>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <!--====================================-->
    <!-- ACCIONES -->
    <!--====================================-->

    <record id="action_cuidador" model="ir.actions.act_window">
      <field name="name">Cuidadores</field>
      <field name="res_model">refugio_animales.cuidador</field>
      <field name="view_mode">list,form</field>
    </record>

    <record id="action_animal" model="ir.actions.act_window">
      <field name="name">Animales</field>
      <field name="res_model">refugio_animales.animal</field>
      <field name="view_mode">list,form</field>
    </record>

    <record id="action_instalacion" model="ir.actions.act_window">
      <field name="name">Instalaciones</field>
      <field name="res_model">refugio_animales.instalacion</field>
      <field name="view_mode">list,form</field>
    </record>

    <!--====================================-->
    <!-- MENÚS -->
    <!--====================================-->

    <menuitem id="menu_refugio_animales_root" name="Refugio de Animales"/>

    <menuitem id="menu_cuidadores"
              name="Cuidadores"
              parent="menu_refugio_animales_root"
              action="action_cuidador"/>

    <menuitem id="menu_animales"
              name="Animales"
              parent="menu_refugio_animales_root"
              action="action_animal"/>

    <menuitem id="menu_instalaciones"
              name="Instalaciones"
              parent="menu_refugio_animales_root"
              action="action_instalacion"/>

  </data>
</odoo>
